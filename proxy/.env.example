# PrinterMonitor Pro - Proxy Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# MODE SELECTION
# ============================================================================

# Options: 'local' or 'cloud'
# - local: Store data in local SQLite database (same as Community Edition)
# - cloud: Send data to PrinterMonitor Pro cloud API
MONITOR_MODE=local

# ============================================================================
# SNMP SETTINGS
# ============================================================================

# SNMP community string (usually 'public')
SNMP_COMMUNITY=public

# SNMP timeout in seconds
SNMP_TIMEOUT=2

# SNMP port (standard is 161)
SNMP_PORT=161

# ============================================================================
# LOCAL MODE SETTINGS
# ============================================================================

# SQLite database file path
DATABASE_FILE=printer_monitoring.db

# ============================================================================
# CLOUD MODE SETTINGS (only needed when MONITOR_MODE=cloud)
# ============================================================================

# Cloud API URL (e.g., https://api.printermonitor.pro)
CLOUD_API_URL=

# Cloud API Key (obtain from your PrinterMonitor Pro account)
CLOUD_API_KEY=

# Number of retry attempts for failed API calls
CLOUD_RETRY_ATTEMPTS=3

# Delay between retry attempts (seconds)
CLOUD_RETRY_DELAY=5

# Enable local SQLite buffering when cloud is unavailable
CLOUD_ENABLE_BUFFER=true

# ============================================================================
# MONITORING SETTINGS
# ============================================================================

# How often to check printers (seconds)
# 3600 = 1 hour, 1800 = 30 minutes, 900 = 15 minutes
MONITOR_INTERVAL=3600

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=proxy.log
